@model LeaveManagementSystem.Models.CheckLeaveViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Check Leaves</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Enter the Employee Code</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-10">
            <input type="text" value="NHM" class="form-control" tabindex="1" style="width:60px; display: inline-block;" readonly>
            @Html.EditorFor(model => model.code, new { htmlAttributes = new { @class = "form-control", tabindex = "2", style = "width:216px; display: inline-block;" } })
            @Html.ValidationMessageFor(model => model.code, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Check" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Home")
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    
}